#!/bin/bash

# script/server: Launch the application and any extra required processes
#                locally.

function progress {
    echo "$(tput bold)$(tput setaf 4)==>$(tput sgr0) $(tput bold)$1$(tput sgr0)"
}

set -e

cd "$(dirname "$0")/.."

script/update

progress "Starting appâ€¦"

venv/bin/python manage.py runserver
